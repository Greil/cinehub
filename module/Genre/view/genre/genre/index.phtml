            <td>
                <a href="<?= $this->url('genre', ['action' => 'edit', 'id' => $genre->getId()]) ?>">Modifier</a>
                <a href="<?= $this->url('genre', ['action' => 'delete', 'id' => $genre->getId()]) ?>">Supprimer</a>
            </td>
