<?php
$title = 'Liste des genres';
$this->headTitle($title);
?>

<h1>
    <?= $this->escapeHtml($title) ?>
</h1>

<p>
    <a href="<?= $this->url('genre', ['action' => 'add']) ?>">
        Ajouter un genre
    </a>
</p>

